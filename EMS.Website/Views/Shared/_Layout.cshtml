<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMSWebsite.Website</title>



    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">
    <!--Nepali Datepicker-->
    <link rel="stylesheet" href="~/lib/nepali-datepicker/nepali.datepicker.v2.2.min.css">

    <!--Project css-->
    <link rel="stylesheet" href="~/css/EMS.css" />
</head>
<body id="page-top">
    @using Microsoft.AspNetCore.Identity
    @using EMS.Website.Models

    @inject SignInManager<ApplicationUser> SignInManager
    @inject UserManager<ApplicationUser> UserManager
    @inject EMS.Services.Interface.IArtistInfoService _artistManager
    @inject EMS.Services.Interface.IMovieInfoService _movieManager

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        @if (!SignInManager.IsSignedIn(User))
        {
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
        </ul>
        }
        else
        {
        <a class="navbar-brand mr-1" href="index.html">@ViewData["Title"]</a>

 <!-- Navbar Search -->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-primary" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>

 <!-- Navbar -->

        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="dropdown-item" asp-controller="Manage" asp-action="Index">Hello @User.Identity.Name.ToUpper() !</a>
                    <a class="dropdown-item" asp-controller="Manage" asp-action="Index">Settings</a>
                    <a class="dropdown-item" asp-controller="Manage" asp-action="ChangePassword">Change Password</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Logout</a>
                </div>
            </li>
        </ul>
        }
    </nav>

    <div id="wrapper">
        @if (SignInManager.IsSignedIn(User))
        {

            <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item ">
                <a is-active-route class="nav-link" style="text-align:center" asp-controller="Manage" asp-action="Index">
                    <img src="@UserManager.GetUserAsync(User).Result.DisplayPicture" class="col-md-4" alt="" />
                </a>
            </li>
            <li class="nav-item ">
                <a is-active-route class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            @if (User.IsInRole("Distributer") || User.IsInRole("Admin"))
            {
            <li class="nav-item">
                <a is-active-route class="nav-link" asp-controller="DistributerReg" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Distributor व्यवस्थापन</span>
                </a>
            </li>
            <li class="nav-item">
                <a is-active-route class="nav-link" asp-controller="BannerInfo" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>ब्यानर व्यवस्थापन</span>
                </a>
            </li>
            }
            @if (User.IsInRole("Exhibitor") || User.IsInRole("Admin"))
            {
            <li class="nav-item">
                <a is-active-route class="nav-link" asp-controller="ExhibitorsDetails" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Exhibitor व्यवस्थापन</span>
                </a>
            </li>
            }
            @if (User.IsInRole("Producer") || User.IsInRole("Admin"))
            {
            <li class="nav-item">
                <a is-active-route class="nav-link" asp-controller="MovieInfo" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Movie व्यवस्थापन</span>
                </a>
            </li>
            <!-- <li class="nav-item">
                <a is-active-route class="nav-link" asp-controller="ProducerProfile" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>Producer व्यवस्थापन</span>
                </a>
            </li> -->
            }
            @if (User.IsInRole("Admin"))
            {
            <li class="nav-item">
                <a is-active-route class="nav-link" asp-controller="ArtistInfo" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>कलाकार व्यवस्थापन</span>
                </a>
            </li>
            <li class="nav-item">
                <a is-active-route class="nav-link" asp-area="" asp-controller="UserAdmin" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    User Management
                </a>
            </li>
            <li class="nav-item">
                <a is-active-route class="nav-link" asp-controller="RolesAdmin" asp-action="Index">
                    <i class="fas fa-fw fa-chart-area"></i>
                    <span>रोल व्यवस्थापन</span>
                </a>
            </li>
            }
            <!-- <li class="nav-item">
                @await Html.PartialAsync("_LoginPartial")

            </li> -->

        </ul>
        }
        <div id="content-wrapper">

            <div class="container-fluid">

                <!-- Breadcrumbs-->
                @RenderSection("Breadcrumbs", required: false)
           
              

                <div class="card mb-3">
                    @RenderBody()
                </div>

            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © SoftApp Studio 2019</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Logout</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/js/demo/chart-area-demo.js"></script>

    <!--Nepali datepicker-->
    <script type="text/javascript" src="~/lib/nepali-datepicker/nepali.datepicker.v2.2.min.js"></script>

    <script>
        $(document).ready(function () {

            //$('.nepali-calendar').nepaliDatePicker();
            $('[type=date]').nepaliDatePicker({
                npdMonth: true,
                npdYear: true,
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#tblDatatable').DataTable();
        });

        $("#form").submit(function (event) {


            if (confirm("Are you sure you want to submit?")) {
                debugger;
                console.log('printd');
                printDiv()

                return true;
            }
            else {
                event.preventDefault();
                return false;
            }
        });

        function printDiv() {

            var divToPrint = document.getElementById('form');

            var newWin = window.open('', 'Print-Window');

            newWin.document.open();

            newWin.document.write('<html><link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css"><link href = "~/css/sb-admin.css" rel = "stylesheet"><body style="text-align:center" onload="window.print()"><h2>Please print this form and submit</h2>' + divToPrint.innerHTML + '</body></html>');

            newWin.document.close();

            setTimeout(function () { newWin.close(); }, 10);

        }

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
