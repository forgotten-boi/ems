                    <div class="form-label-group">
                        <input type="file" asp-for="IncomeTaxDoc" id="IncomeTaxDoc" name="IncomeTaxDoc" accept="application/pdf" />
                        <span asp-validation-for="IncomeTaxDoc" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <label asp-for="DistributionRightDoc" class="control-label"></label>
                
                    <div class="form-label-group">
                        <input type="file" asp-for="DistributionRightDoc" id="DistributionRightDoc" name="DistributionRightDoc" accept="application/pdf" />
                        <span asp-validation-for="DistributionRightDoc" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="RegDoc" class="control-label"></label>
                  
                    <div class="form-label-group">
                        <input type="file" asp-for="RegDoc" id="RegDoc" name="RegDoc" accept="application/pdf" />
                        <span asp-validation-for="RegDoc" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>*@
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <input type="submit" value="Create" class="btn btn-primary pull-right" />
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
